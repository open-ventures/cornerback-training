/ MAIN

.l-canvas.type_wide.col_sidecont.headertype_extended
  .l-canvas-h.l-canvas-h
    
    .l-main
      .l-main-h.workout

        .l-submain.signup
          .l-submain-h.g-html.i-cf

            .g-cols
              .one-third.email-signup
                %form#contact_form.g-form{action: "#", method: "post"}
                  #contact_form_success_message.g-alert.type_success.with_close{style: "opacity: 0; display: none;"}
                    .g-alert-close ✕
                    .g-alert-body
                      %p
                        %b Thank You!
                        Your message was sent.
                  #contact_form_error_message.g-alert.type_error.with_close{style: "opacity: 0; display: none;"}
                    .g-alert-close ✕
                    .g-alert-body
                      %p
                  .g-form-group
                    .g-form-group-rows
                    - if request.path == "/purchase-cornerback-training-plan"
                      %h4 You're 1 step closer to becoming a GREAT CORNERBACK
                    - elsif request.path == "/free-trial"
                      %h4 You're 1 step closer to your FREE TRIAL
                    - else
                      %h4 Create Your Free Account.										  									  
                    = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html:{class: "card_form"}) do |f|
                      = f.error_notification
                      = display_base_errors resource
                      .form-inputs
                        .field
                          .g-form-row
                            - if request.path == "/purchase-cornerback-training-plan" 
                              = f.input :buy_now, :as => :hidden, :input_html => { :value => "true" }
                            = f.input :full_name, :required => true, :autofocus => true, :placeholder => "First Name", :label => false 
                        .field
                          .g-form-row
                            = f.input :email, :required => true, :autofocus => true, :placeholder => "E-mail", :label => false
                        .field
                          .g-form-row
                            = f.input :password, :required => true, :placeholder => "Password", :label => false
                        .field
                          .g-form-row
                            = f.input :password_confirmation, :required => true, :placeholder => "Confirm Password", :label => false
                            - if @plan == "paid"
                              = hidden_field_tag :plan, "paid"
                              .field
                                = label_tag :name_on_card, "Name on Card"
                                = text_field_tag :name_on_card, nil, name: nil, required: true
                              .field
                                = label_tag :card_number, "Credit Card Number"
                                = text_field_tag :card_number, nil, name: nil, required: true
                              .field
                                = label_tag :card_code, "Card Security Code (CVV)"
                                = text_field_tag :card_code, nil, name: nil, required: true
                              .field
                                = label_tag :card_month, "Card Expiration"
                                = select_month nil, {add_month_numbers: true}, {name: nil, id: "card_month"}
                                = select_year nil, {start_year: Date.today.year, end_year: Date.today.year+10}, {name: nil, id: "card_year"}
                              = f.hidden_field :stripe_token  
                        .g-form-row
                          .g-form-row-label
                            .g-form-row-field.inline-block
                              =f.input :terms, as: :boolean, label: false
                              I agree to the
                              %a{:href => "legal_terms.html"} Terms of Service
                            -if @plan== "paid"
                              #stripe_error.hide{style:"color:red;margin-bottom:10px;"}
                            #contacts_send
                              =f.submit "#{if request.path == "/purchase-cornerback-training-plan" then "Buy Program" else "Get Free Trial" end}", class: "g-btn type_primary size_small"
