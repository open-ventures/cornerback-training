#page.user_profile
  .container.visible-phone
    %p.right
      %a.btn.btn-primary.scrollto{:href => "#why-join"}
        Why Join? Â 
        %i.icon-info-sign
  .hero-unit
    .container
      %h6 Player Profile
      %ul.breadcrumb
        %li.active
          %a{"data-toggle" => "tab", :href => "#settings"} Account Settings
          %span.divider /
        %li
          %a{"data-toggle" => "tab", :href => "#profile"} Cornerback Profile
          %span.divider /
        %li
          %a{"data-toggle" => "tab", :href => "#testing"} Performance Testing
          %span.divider /
        %li
          %a{"data-toggle" => "tab", :href => "#survey"} Cornerback Survey
    / close container
  / close hero-unit
  #main-content.container.clearfix
    .row-fluid
      .span12
        #myTabContent.tab-content
          / begin myTabContent
          / **************** BEGIN RESUME ****************
          #settings.tab-pane.fade.active.in
            / Begin tab-pane resumes
            = simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
              %button.btn.btn-med{:type => "submit", :value => ""} Update
              %fieldset
                %h5 Account Settings
                .control-group
                  .control-group
                    %label.required.control-label{:for => "firstName"} First Name
                    .controls
                      =f.input :full_name, label:false, input_html:{class: "span3"}
                  .control-group
                    %label.required.control-label{:for => "email"} E-mail
                    .controls
                      =f.input :email, label:false, input_html:{class: "span3"}
                  %h5 Change Your Password
                  .control-group
                    %label.required.control-label{:for => "newPassword"} Password
                    .controls
                      = f.input :password, :autocomplete => "off", :hint => "leave it blank if you don't want to change it", :required => false, input_html: {class: "span3"}, label: false
                  .control-group
                    %label.required.control-label{:for => "confirmPassword"} Confirm Password
                    .controls
                      =f.input :password_confirmation, label:false, input_html:{class: "span3"}
                  .control-group
                    %label.required.control-label{:for => "currentPassword"} Current Password
                    .controls
                      = f.input :current_password, :hint => "we need your current password to confirm your changes", :required => true, input_html: {class: "span3"}, label: false
                  %br/
                  %br/
                  %span 
                    Unhappy?
                    =link_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete
          / close tab-pane fade in active
          / END RESUME
          / **************** BEGIN CORNERBACK PROFILE ****************
          =render partial: "profiles/edit", locals: {profile: current_user.profile}
          =render partial: "performance_tests/edit",locals: {performance: current_user.performance_test}
          #survey.tab-pane.fade
            %button.btn.btn-large TAKE THE SURVEY
